{% extends 'base.html.twig' %}

{% block title %}Demande index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Demandes</h1>
        <a href="{{ path('demande_new') }}" class="btn btn-primary my-2">Créer une demande</a>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Objet</th>
                <th scope="col">Texte</th>
                <th scope="col">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for demande in demandes %}
                <tr>
                    <th scope="row">{{ demande.id }}</th>
                    <td scope="row">{{ demande.objet }}</td>
                    <td scope="row"><textarea readonly style="width: 100%">{{ demande.texte }}</textarea></td>
                    <td scope="row">
                        <a href="{{ path('demande_show', {'id': demande.id}) }}" class="btn btn-primary">Afficher</a>
                        <a href="{{ path('demande_repondre', {'id': demande.id}) }}" class="btn btn-secondary">Répondre</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>

{% endblock %}
