{% extends 'base.html.twig' %}

{% block title %}Rubrique{% endblock %}

{% block body %}
    <div class="container">
        <h1>Rubrique</h1>

        <div class="pt-5">
            <div class="col d-flex">
                <div class="col">
                    <div class="row font-weight-bold">Id</div>
                    <div class="row">{{ rubrique.id }}</div>
                </div>
                <div class="col">
                    <div class="row font-weight-bold">Titre</div>
                    <div class="row">{{ rubrique.titre }}</div>
                </div>
                <div class="col">
                    <div class="row font-weight-bold">Est dropdown</div>
                    <div class="row">{{ rubrique.dropdown ? 'Oui' : 'Non' }}</div>
                </div>
            </div>
        </div>
        <div>
            <h2>Articles</h2>
            <div class="col d-flex">
                {% for article in articles %}
                    {% if rubrique.id == article.rubrique.id %}
                <div class="col"><a href="{{ path('admin_article_show',{id: article.id}) }}">{{ article.id }}</a></div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="d-flex pt-5">
            <a href="{{ path('rubrique_index') }}" class="btn btn-primary mr-2">Retour Ã  la liste</a>

            <a href="{{ path('rubrique_edit', {'id': rubrique.id}) }}" class="btn btn-warning mr-2">Modifier</a>

            {{ include('rubrique/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
