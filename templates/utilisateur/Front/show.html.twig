{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class="container pt-5">
        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
        <h1>Mon profil</h1>
        <div class="pt-5">
            <div class="row">
                <div class="col-2 font-weight-bold">Nom</div>
                <div class="col-2 font-weight-bold">Pr√©nom</div>
                <div class="col-2 font-weight-bold">Email</div>
                <div class="col-2 font-weight-bold">Newsletter</div>
                <div class="col-2 font-weight-bold">Abonnement</div>
            </div>
            <div class="row">
                <div class="col-2">{{ app.user.nom }}</div>
                <div class="col-2">{{ app.user.prenom }}</div>
                <div class="col-2">{{ app.user.email }}</div>
                <div class="col-2">{{ app.user.newsletter ? 'inscrit' : 'non inscrit' }}</div>
                <div class="col-2">{{ app.user.abonnement.titre }}</div>
            </div>
        </div>
            <div class="col pt-5">
                <a href="{{ path('utilisateur_edit', {'id': app.user.id}) }}"class="btn btn-warning">Modifier</a>
            </div>
        </div>
    </div>


{% endblock %}
